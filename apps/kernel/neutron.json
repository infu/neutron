{
  "id": "kernel",
  "name": "Neutron",
  "version": 1,
  "src": "main.mo",
  "share": {
    "is_authorized": {
      "arg": ["memory_kernel"],
      "async": false
    }
  },
  "func": {
    "kernel_static": {
      "type": "shared",
      "arg": ["memory_kernel"]
    },
    "kernel_static_query": {
      "type": "query",
      "arg": ["memory_kernel"]
    },
    "http_request": {
      "type": "query",
      "allow": "any",
      "arg": ["memory_kernel", "this.http_request_streaming_callback"]
    },
    "http_request_streaming_callback": {
      "type": "query",
      "allow": "any",
      "arg": ["memory_kernel"]
    },

    "kernel_authorized_add": {
      "type": "shared",
      "arg": ["memory_kernel"]
    },
    "kernel_authorized_rem": {
      "type": "shared",
      "arg": ["memory_kernel"]
    },
    "kernel_install_code": {
      "type": "shared",
      "arg": ["memory_kernel", "this"],
      "async": true
    }
  },
  "memory": {
    "kernel": {
      "version": 1
    }
  }
}
